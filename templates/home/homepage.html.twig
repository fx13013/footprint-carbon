{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <form class="mb-3">
            <legend>Calculate your footprint</legend>
            <div class="form-group">
                <label for="expense">Expense Type</label>
                <select name="expense" id="expense">
                    {% for select in allSelect %}
                        <option value="{{select.ratio}}">{{select.expenseType}}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="amount">Amount (â‚¬)</label>
                <input type="number" id="amount" min="0" step="0.01" required>
            </div>
            <button type="button" class="btn btn-success" id="calculate" onclick="onSelectValue()">Calculate</button>
        </form>
        <p>Your CO2 footprint for this expense is : <strong id="output"></strong> kg</p>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="app.js"></script>
{% endblock %}